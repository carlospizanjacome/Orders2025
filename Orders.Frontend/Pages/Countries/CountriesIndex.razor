@page "/countries"
@using Orders.Frontend.Shared


<h3>Paises</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/countries/create">Nuevo País</a>
</div>


<GenericList MyList="Countries">
    <Body>

        <Pagination CurrentPage="currentPage"
                    TotalPage="totalPage"
                    SelectedPage="SelectedPageAsync" />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Pais</th>
                    <th style="width:210px">Departamentos / Estados</th>
                    <th style="width:210px"></th>

                </tr>
            </thead>

            <tbody>
                @foreach (var country in Countries!)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>@country.StatesNumber</td>
                        <td>
                            <a class="btn btn-sm btn-warning" href="/countries/edit/@country.Id"> Editar </a>
                            <a class="btn btn-sm btn-info" href="/countries/details/@country.Id">Detalles</a>
                            <button @onclick=@(()=>DeleteAsync(country)) class="btn btn-sm btn-danger"> Borrar </button>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </Body>
</GenericList>




